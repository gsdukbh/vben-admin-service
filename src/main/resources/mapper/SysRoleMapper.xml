<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.werls.vben.system.mapper.SysRoleMapper">

    <select id="getByName" resultType="top.werls.vben.system.entity.SysRole">
        select * from vben_sys_role where name = #{name}
    </select>
    <select id="getByRid" resultType="top.werls.vben.system.entity.SysRole">
        select * from vben_sys_role where rid = #{id}
    </select>
</mapper>